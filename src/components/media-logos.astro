---
import { MEDIA_IMAGES } from "../config/lists";
import WelcomeForm from "./form";
---

<div class="text border-b-2 border-white mb-20 pb-14">
    <div class="flex flex-wrap">
        {
            MEDIA_IMAGES.map(({ name, src }, index) => {
                const isPar = index % 2;
                const pictureWith = isPar ? "40%" : "60%"
                const imgSize = isPar ? 'min-w-[63px]' : 'min-w-[133px]'
                return (
                    <picture
                        class={`flex-1 min-w-[${pictureWith}] mb-10`}
                    >
                        <img
                            src={src}
                            class={`justify-between ${imgSize}`}
                            alt={name}
                        />
                    </picture>
                );
            })
        }
    </div>
    <WelcomeForm text="Â¡Registrarme ahora!" client:only="react" />
</div>
