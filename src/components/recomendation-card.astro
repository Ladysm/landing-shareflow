---
const {title, description, img} = Astro.props
---

<div class='mb-10 max-w-[400px] mx-auto md:flex-1 rounded-xl'>
    <picture class="bg-[#980ff7] flex justify-center rounded-xl mb-3 overflow-hidden">
        <source media="(min-width:768px)" srcset={img} />
        <img src={`mobile-${img}`}  alt="women" style="width:auto;" />
    </picture>
    <h4 class='text-2xl mb-5 text-primary font-bold'>{title}</h4>
    <p>{description}</p>
</div>